<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cameraZoom="16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:mapType="normal"
        tools:context=".activities.MapsActivity" />

    <ImageView
        android:id="@+id/image_view_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:onClick="back_to_home"
        android:contentDescription="@string/todo"
        android:layout_gravity="left"
        android:background="@drawable/ic_back_arrow" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center|top"
        android:src="@drawable/select_you_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/confirm_your_location"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="bottom|center"
        android:onClick="confirm"
         />


    <EditText
        android:id="@+id/edit_text_street_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/exactly_client_location"
        android:hint="Non Named Road"
        android:paddingStart="50dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_light"
        android:textColor="@color/colortooGray"
        android:layout_gravity="center|top"
        tools:ignore="RtlSymmetry" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>









