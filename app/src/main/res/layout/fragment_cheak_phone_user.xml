<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/colorBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CheakPhoneUserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow" />


        <TextView
            android:id="@+id/text_view_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="end"
            android:text="@string/edit"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/enter_your_mobile_number"
            android:textColor="#242424"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view_back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:text="@string/we_ve_sent_a_code_to"
            android:textColor="#242424"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:paddingStart="12dp"
            android:text="@string/_9705991234567"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <ImageView
            android:id="@+id/to_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cont"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <!--   <com.github.pinball83.maskededittext.MaskedEditText
            android:id="@+id/masked_edit_text"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:paddingStart="8dp"
            android:textColor="#707070"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:mask="*____*____*____*"
            app:maskIconColor="@color/colorPrimary"
            app:notMaskedSymbol="*"
            tools:ignore="RtlSymmetry" />-->


        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_light"
            android:paddingStart="0dp"
            android:text="@string/resend_code_in"
            android:textColor="@color/colortooGray"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/no_one"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/_50_seconds"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView10"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            app:layout_constraintVertical_bias="1.0" />


        <EditText
            android:id="@+id/no_one"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:height="10dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorRegular"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@+id/no_two"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <EditText
            android:id="@+id/no_two"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:height="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorRegular"
            app:layout_constraintBottom_toBottomOf="@+id/no_one"
            app:layout_constraintEnd_toStartOf="@+id/no_three"
            app:layout_constraintTop_toTopOf="@+id/no_one"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/no_three"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:height="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorRegular"
            app:layout_constraintBottom_toBottomOf="@+id/no_one"
            app:layout_constraintEnd_toStartOf="@+id/no_four"
            app:layout_constraintTop_toTopOf="@+id/no_four"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/no_four"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:height="10dp"
            android:gravity="center"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/colorRegular"
            app:layout_constraintBottom_toBottomOf="@+id/no_one"
            app:layout_constraintEnd_toEndOf="@+id/to_start" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>