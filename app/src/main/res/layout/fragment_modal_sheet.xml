<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@+id/layout_sheet"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

          <TextView
              android:id="@+id/textView2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="30dp"
              android:text="@string/select_time_of_home_visit"
              android:textSize="20sp"
              android:gravity="center"
              android:textColor="@color/colorRegular"
              android:fontFamily="@font/roboto_bold"
   />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_day"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:listitem="@layout/select_time_visit"

            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycle_view_time"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center"
            tools:listitem="@layout/select_time_visit"

            />
    </LinearLayout>




    <ImageView
              android:id="@+id/confirm_time"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="bottom|center"
              android:layout_marginTop="80dp"
              android:onClick="change_time"
              android:layout_marginHorizontal="15dp"
              android:background="@drawable/confirm_time"
              />


</LinearLayout>


