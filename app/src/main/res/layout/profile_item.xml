<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:foreground="?selectableItemBackground"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_view_service"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/contact_us" />

    <TextView
        android:id="@+id/text_view_name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Help Center"
        android:textColor="@color/colorRegular"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@+id/image_view_service"
        app:layout_constraintTop_toTopOf="@+id/image_view_service" />

    <ImageView
        android:id="@+id/image_view_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_name"
        app:layout_constraintStart_toEndOf="@+id/text_view_name"
        app:layout_constraintTop_toTopOf="@+id/text_view_name"
        app:srcCompat="@drawable/ic_next" />
</androidx.constraintlayout.widget.ConstraintLayout>